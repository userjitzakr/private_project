<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_billing_my_company"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arpo.billing.Billing_myCompany"
    android:background="@color/bgColor">

    <TextView
        android:text="@string/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/txt_mycompany_name_label"
        android:textColor="@color/white"
        tools:ignore="UnknownId" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_mycompany_name"
        android:background="@color/white"
        android:layout_alignTop="@+id/txt_mycompany_name_label"
        android:layout_toEndOf="@+id/txt_mycompany_address_label"
        android:layout_alignStart="@+id/edit_mycompany_address"
        tools:ignore="LabelFor" />

    <TextView
        android:text="@string/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/txt_mycompnay_phone_label"
        android:textColor="@color/white"
        android:layout_below="@+id/edit_mycompany_address2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/tin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/txt_mycompany_tin"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_mycompnay_phone_label"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_mycompany_address3"
        android:background="@color/white"
        android:layout_below="@+id/edit_mycompany_address2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_mycompany_address"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_mycompany_address_label"
        android:layout_alignParentEnd="true"
        tools:ignore="LabelFor" />

    <TextView
        android:text="@string/address_line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/txt_mycompany_address2"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_mycompany_address_label"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_mycompany_address2"
        android:background="@color/white"
        android:layout_alignBaseline="@+id/txt_mycompany_address2"
        android:layout_alignBottom="@+id/txt_mycompany_address2"
        android:layout_alignParentEnd="true"
        tools:ignore="LabelFor" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edit_mycompany_phone"
        android:background="@color/white"
        android:layout_alignBottom="@+id/txt_mycompnay_phone_label"
        android:layout_alignParentEnd="true"
        tools:ignore="LabelFor,TextFields"
        android:inputType="number" />

    <TextView
        android:text="@string/address_line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_mycompany_address3"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/edit_mycompany_address3"
        android:layout_alignBottom="@+id/edit_mycompany_address3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/address_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_mycompany_address_label"
        android:textColor="@color/white"
        android:layout_below="@+id/edit_mycompany_name"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/mycompany"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="25dp"
        tools:ignore="ContentDescription" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_mycompany_tin"
        android:background="@color/white"
        android:layout_alignBottom="@+id/txt_mycompany_tin"
        android:layout_alignParentEnd="true"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btn_myCompany_uploadSign"
        android:background="@drawable/uploadsignature"
        android:layout_height="50dp"
        android:layout_width="150dp"
        android:layout_below="@+id/btn_mycomp_uploadLogo"
        android:layout_alignStart="@+id/btn_mycompany_update" />

    <Button
        android:layout_height="50dp"
        android:id="@+id/btn_mycomp_uploadLogo"
        android:background="@drawable/uploadcompanylogo"
        android:layout_width="150dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/edit_mycompany_tin"
        android:layout_alignStart="@+id/btn_myCompany_uploadSign" />

    <Button
        android:layout_height="50dp"
        android:id="@+id/btn_mycompany_cancel"
        android:background="@drawable/mycompanycancel"
        android:layout_width="150dp"
        android:layout_below="@+id/btn_mycompany_update"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_height="50dp"
        android:id="@+id/btn_mycompany_update"
        android:background="@drawable/mycompanyupdate"
        android:layout_width="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btn_mycomp_uploadLogo"
        android:layout_alignStart="@+id/btn_mycompany_cancel" />
</RelativeLayout>
