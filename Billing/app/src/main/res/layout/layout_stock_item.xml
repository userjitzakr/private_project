<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="100dp">


        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_price"
            android:textColor="@color/bgColor"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bgColor"
            android:id="@+id/txt_item_selling_price"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            android:text="DATE :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/bgColor"
            android:layout_marginStart="16dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_description"
            android:layout_centerVertical="true"
            android:textColor="@color/bgColor"
            android:layout_alignStart="@+id/textView6" />

        <TextView
            android:text="Serial Number :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView6"
            android:textColor="@color/bgColor" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_serial"
            android:textColor="@color/bgColor"
            android:layout_above="@+id/txt_item_date"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_available"
            android:textColor="@color/bgColor"
            android:layout_alignBottom="@+id/textView14"
            android:layout_toEndOf="@+id/textView14" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_date"
            android:textColor="@color/bgColor"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/textView6" />

        <TextView
            android:text="Available :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textAlignment="textEnd"
            android:textColor="@color/bgColor"
            android:layout_below="@+id/txt_item_description"
            android:layout_alignStart="@+id/txt_item_description" />

        <TextView
            android:text="PRICE : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textColor="@color/bgColor"
            android:layout_below="@+id/txt_item_date"
            android:layout_toStartOf="@+id/txt_item_price" />

        <TextView
            android:text="RETAIL PRICE : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:textColor="@color/bgColor"
            android:layout_marginStart="38dp"
            android:layout_alignBaseline="@+id/txt_item_available"
            android:layout_alignBottom="@+id/txt_item_available"
            android:layout_toEndOf="@+id/txt_item_serial" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_item_sold"
            android:textColor="@color/bgColor"
            android:layout_alignBaseline="@+id/textView15"
            android:layout_alignBottom="@+id/textView15"
            android:layout_toEndOf="@+id/textView15"
            android:layout_marginStart="11dp" />

        <TextView
            android:text="Sold :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15"
            android:textColor="@color/bgColor"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView14" />
    </RelativeLayout>
</android.support.v7.widget.CardView>