<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_billing_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arpo.billing.Billing_settings"
    android:background="@color/bgColor">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:srcCompat="@drawable/settings"
        android:id="@+id/imageView7"
        android:contentDescription="@string/content_description_for_image"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edit_settings_tax_percent"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/btn_Settings_update_tax"
        android:background="@drawable/mycompanyupdate"
        android:layout_toEndOf="@+id/txt_settings_percent_label"
        android:layout_marginStart="24dp"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/edit_settings_tax_percent"
        android:labelFor="@+id/edit_settings_tax_percent"
        android:layout_alignBottom="@+id/edit_settings_tax_percent" />

    <Button
        android:layout_height="50dp"
        android:layout_marginTop="66dp"
        android:id="@+id/btn_settings_organisation"
        android:background="@drawable/selectorganisation"
        android:layout_width="150dp"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/btn_setting_restore"
        android:background="@drawable/restore"
        android:layout_alignBaseline="@+id/btn_setting_backup"
        android:layout_alignBottom="@+id/btn_setting_backup"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/edit_settings_tax_percent"
        android:layout_width="80dp" />

    <TextView
        android:text="@string/set_total_tax_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:id="@+id/txt_tax_percent_label"
        android:textColor="@color/white"
        android:layout_below="@+id/btn_settings_organisation"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/edit_settings_tax_percent"
        android:background="@color/white"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/txt_tax_percent_label"
        android:layout_alignBottom="@+id/txt_tax_percent_label"
        android:layout_toEndOf="@+id/txt_tax_percent_label" />

    <TextView
        android:text="@string/percentsymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_settings_percent_label"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/edit_settings_tax_percent"
        android:layout_alignBottom="@+id/edit_settings_tax_percent"
        android:layout_toEndOf="@+id/edit_settings_tax_percent"
        android:layout_marginStart="11dp" />

    <TextView
        android:text="@string/local_data_back_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/btn_setting_backup"
        android:layout_marginTop="11dp"
        android:background="@drawable/takebkup"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/edit_settings_tax_percent"
        android:layout_width="80dp" />

    <Button
        android:id="@+id/btn_settings_activate"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/btn_setting_backup"
        android:layout_below="@+id/btn_setting_backup"
        android:layout_marginTop="12dp"
        android:background="@drawable/activate"
        android:layout_alignParentStart="true" />
</RelativeLayout>
