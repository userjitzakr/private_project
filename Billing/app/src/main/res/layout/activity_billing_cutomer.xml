<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_billing_cutomer"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    tools:context="com.arpo.billing.Billing_cutomer"
    android:background="@color/colorAccent"
    android:layout_height="300dp"
    android:layout_width="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btn_customer_add"
            android:background="@drawable/setcustomername"
            android:layout_height="30dp"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/edit_customer_address"
            android:layout_width="100dp" />

        <TextView
        android:text="@string/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:id="@+id/txt_customer_address_label"
        android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/txt_customer_heading_label"
            android:layout_marginStart="14dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textMultiLine|textPostalAddress"
            android:ems="10"
            android:id="@+id/edit_customer_address"
            android:background="@color/white"
            android:textColor="?android:attr/colorForeground"
            android:layout_alignTop="@+id/txt_customer_address_label"
            android:layout_alignStart="@+id/edit_customer_name"
            android:layout_width="150dp"
            tools:ignore="LabelFor" />

        <TextView
    android:text="@string/name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
            android:id="@+id/txt_customer_name_label"
    android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/txt_customer_address_label"
            android:layout_alignStart="@+id/txt_customer_address_label" />

        <TextView
        android:text="@string/enter_customer_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_customer_heading_label"
            android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
            android:layout_above="@+id/txt_customer_name_label"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_customer_name"
            android:background="@color/white"
            android:textColor="?android:attr/colorForeground"
            android:layout_width="150dp"
            android:layout_alignBaseline="@+id/txt_customer_name_label"
            android:layout_alignBottom="@+id/txt_customer_name_label"
            android:layout_toEndOf="@+id/txt_customer_address_label"
            android:layout_marginStart="21dp"
            tools:ignore="LabelFor" />

    </RelativeLayout>

</RelativeLayout>
