<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_billing_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bgColor"
    tools:context="com.arpo.billing.Billing_history">

    <TextView
        android:text="@string/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:id="@+id/txt_hostory_from_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/_11_jan_2017"
        android:ems="10"
        android:id="@+id/edit_history_to"
        android:background="@color/white"
        android:layout_alignBottom="@+id/txt_history_to_label"
        android:layout_alignStart="@+id/edit_history_from"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btn_history_from"
        android:background="@drawable/calenderselect"
        android:layout_marginStart="13dp"
        android:layout_width="30dp"
        android:layout_alignBottom="@+id/edit_history_from"
        android:layout_toEndOf="@+id/edit_history_from"
        android:layout_height="23dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hist"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/edit_history_from"
        tools:ignore="ContentDescription" />

    <Button
        android:layout_width="30dp"
        android:id="@+id/btn_history_to"
        android:background="@drawable/calenderselect"
        android:layout_alignTop="@+id/edit_history_to"
        android:layout_alignStart="@+id/btn_history_from"
        android:layout_height="23dp" />

    <TextView
        android:text="@string/total_sale2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/txt_history_sale_label"
        android:layout_below="@+id/txt_history_to_label"
        android:layout_alignStart="@+id/txt_history_to_label"
        android:textColor="@color/white"
        android:layout_toStartOf="@+id/txt_history_total_sale" />

    <TextView
        android:text="@string/total_profit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/txt_history_profit_label"
        android:layout_below="@+id/txt_history_sale_label"
        android:layout_alignStart="@+id/txt_history_sale_label"
        android:textColor="@color/white"
        android:layout_toStartOf="@+id/txt_histor_profit" />

    <TextView
        android:text="@string/to2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_history_to_label"
        android:textColor="@color/white"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/edit_history_from"
        android:layout_alignEnd="@+id/txt_hostory_from_label"
        android:layout_alignParentStart="true"
        android:textAlignment="textEnd" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_history"
        android:layout_below="@id/txt_history_profit_label"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="@string/_5000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_histor_profit"
        android:textColor="@color/white"
        android:layout_above="@+id/lv_history"
        android:layout_alignStart="@+id/txt_history_total_sale" />

    <TextView
        android:text="@string/_10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_history_total_sale"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/txt_history_sale_label"
        android:layout_alignBottom="@+id/txt_history_sale_label"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/_10_jan_2017"
        android:ems="10"
        android:id="@+id/edit_history_from"
        android:background="@color/white"
        android:layout_width="100dp"
        tools:ignore="LabelFor"
        android:layout_alignTop="@+id/txt_hostory_from_label"
        android:layout_toEndOf="@+id/txt_hostory_from_label"
        android:layout_marginStart="68dp" />

</RelativeLayout>
